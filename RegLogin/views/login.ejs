<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <style>
        div{
            width: 500px;
            margin: 50px;
        }
    </style>
</head>
<body>
<div>
    <h3>登录页面</h3>
    <form action="/doLogin" method="post">
        <p>
            <label for="username">
                用户名：<input type="text" id="username" name="username">
            </label>
        </p>
        <p>
            <label for="password">
                密  码：<input type="text" id="password" name="password">
            </label>
        </p>
        <p>
            <input type="button" value="欢迎登录" id="btn">
        </p>
    </form>
</div>
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script>
    $('#btn').click(function(){
        //.log($('form').serialize())
        $.ajax({
            url:'/doLogin',
            data:$('form').serialize(),
            type:'post',
            dataType:'json',
            success:function(val){
                console.log(val);
                if(val.bok){
                    console.log(val.msg)
                }else{
                    console.log(val.msg)
                }
            }
        })
    })
</script>
</body>
</html>